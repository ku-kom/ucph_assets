{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "globals": {
    "ENV": true
  },
  "rules": {
    "arrow-body-style": "off",
    "capitalized-comments": "off",
    "no-negated-condition": "off",
    "quotes": [ "error", "single", { "allowTemplateLiterals": true } ]
  }
}