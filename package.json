{
	"name": "ucph_assets",
	"description": "Includes Bootstrap's source Sass and compiled JavaScript bundle via npm.",
	"author": "Nanna Ellegaard",
	"version": "1.0.0",
	"private": true,
	"repository": "ku-kom/ucph_assets",
	"license": "MIT",
	"scripts": {
		"build": "npm run css",
		"css-compile": "sass --style compressed --source-map --embed-sources --no-error-css \"Resources/Public/Scss/bootstrap5/bootstrap.scss\" \"Resources/Public/Css/Dist/bootstrap.min.css\"",
		"css-lint": "stylelint scss/",
		"css-prefix": "postcss --config build/postcss.config.js --replace \"Resources/Public/Css/Dist/bootstrap.min.css\"",
		"css": "npm-run-all css-compile css-prefix",

		"server": "sirv --dev --no-clear --port 3000",
		"start": "npm-run-all --parallel watch server",
		"watch": "nodemon -e scss -x \"npm run css\"",
		"test": "npm-run-all css-lint css"
	},
	"keywords": [
		"TYPO3",
		"Bootstrap",
		"sass",
		"css",
		"javascript"
	],
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"bootstrap": "^5.3.0",
		"bootstrap-icons": "^1.10.5"
	},
	"devDependencies": {
		"@babel/cli": "^7.22.5",
		"@babel/core": "^7.22.5",
		"@babel/preset-env": "^7.22.4",
		"@popperjs/core": "^2.11.8",
		"@rollup/plugin-babel": "^6.0.3",
		"@rollup/plugin-commonjs": "^25.0.0",
		"@rollup/plugin-node-resolve": "^15.1.0",
		"@rollup/plugin-replace": "^5.0.2",
		"autoprefixer": "^10.4.14",
		"nodemon": "^2.0.22",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.24",
		"postcss-cli": "^10.1.0",
		"rollup": "^3.25.1",
		"sass": "^1.62.1",
		"sirv-cli": "^2.0.2",
		"stylelint": "^15.6.0",
		"stylelint-config-twbs-bootstrap": "^10.0.0",
		"terser": "^5.17.1"
	}
}