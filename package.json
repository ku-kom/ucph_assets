{
	"name": "ucph_assets",
	"description": "Includes Bootstrap's source Sass and compiled JavaScript bundle via npm.",
	"author": "Nanna Ellegaard",
	"version": "1.0.0",
	"private": true,
	"repository": "ku-kom/ucph_assets",
	"license": "MIT",
	"scripts": {
		"build": "npm run css",
		"css-compile": "sass --style compressed --source-map --embed-sources --no-error-css --load-path=node_modules scss/:css/",
		"css-lint": "stylelint scss/",
		"css-prefix": "postcss --replace css/styles.css --use autoprefixer --map",
		"css": "npm-run-all css-compile css-prefix",
		"start": "npm-run-all --parallel watch server",
		"watch": "nodemon -e html,scss -x \"npm run css\"",
		"test": "npm-run-all css-lint css",
		"-oldwatch": "npm-run-all --parallel watch:*"
	},
	"keywords": [
		"TYPO3",
		"Bootstrap"
	],
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"bootstrap": "^5.3.0",
		"bootstrap-icons": "^1.10.5"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.14",
		"nodemon": "^2.0.22",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.24",
		"postcss-cli": "^10.1.0",
		"sass": "^1.62.1",
		"sirv-cli": "^2.0.2",
		"stylelint": "^15.6.0",
		"stylelint-config-twbs-bootstrap": "^10.0.0"
	}
}